<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#959393"
    tools:context=".presentation.reporte.InformeGeneralFragment">

    <Button
        android:id="@+id/regresarCuatroMPButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infromeGeneralTextView"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="386dp"
        android:layout_height="71dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/infromeGeneralTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="143dp"
            android:layout_height="66dp"
            android:text="Ingrese Numero De Cuenta:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/numeroDeCuentaEditText"
            android:layout_width="148dp"
            android:layout_height="42dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/BuscarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar" />
    </LinearLayout>

    <TextView
        android:id="@+id/infromeGeneralTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#600909"
        app:layout_constraintBottom_toTopOf="@+id/regresarCuatroMPButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars = "vertical"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>